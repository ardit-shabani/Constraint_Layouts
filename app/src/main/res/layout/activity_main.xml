<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.46" />

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@id/guideline85"
        android:layout_margin="10dp"/>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@id/guideline65"
        android:layout_margin="10dp"/>

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline33"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_profile"
        app:layout_constraintTop_toBottomOf="@id/guideline33"
        app:layout_constraintBottom_toTopOf="@id/guideline33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical"


        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon"
        app:layout_constraintTop_toTopOf="@id/guideline33"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        />
        <TextView
            android:text="Beauty and the"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical35"
            app:layout_constraintTop_toTopOf="@id/guideline33"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    <TextView
        android:text="Beast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical35"
        app:layout_constraintTop_toTopOf="@id/guideline33"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/guideline50"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="March 2017 PG 129 minutes"
        app:layout_constraintBottom_toBottomOf="@id/guideline50"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical35"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:text="RENT FROM R29,99"
        android:background="#E91E63"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline50"
        app:layout_constraintEnd_toStartOf="@id/guidelineVertical"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:text="BUY FROM R127,99"
        android:textColor="#FFFFFF"
        android:background="#E91E63"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical"
        app:layout_constraintTop_toTopOf="@id/guideline50"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/icon_1"
        app:layout_constraintTop_toTopOf="@id/guideline65"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical"
        app:layout_constraintHorizontal_bias="0.40"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/icon_2"
        app:layout_constraintTop_toTopOf="@id/guideline65"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical"
        app:layout_constraintHorizontal_bias="0.85"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical"
        android:src="@mipmap/icon_3"
        app:layout_constraintTop_toTopOf="@id/guideline65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical"
        android:src="@mipmap/icon_4"
        app:layout_constraintTop_toTopOf="@id/guideline65"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.60"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="@id/guideline85"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The story and characters you know and love come to spectacular live in the live-action adaption of Disney's animated classic Beauty and the Beasst."
        app:layout_constraintTop_toTopOf="@id/guideline85"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="#000000"
        android:textSize="22sp"
        />

</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>